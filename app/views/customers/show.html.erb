<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name_first) %>:</strong></dt>
  <dd><%= @customer.name_first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_last) %>:</strong></dt>
  <dd><%= @customer.name_last %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_company) %>:</strong></dt>
  <dd><%= @customer.name_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @customer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_street) %>:</strong></dt>
  <dd><%= @customer.address_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_city) %>:</strong></dt>
  <dd><%= @customer.address_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_state) %>:</strong></dt>
  <dd><%= @customer.address_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @customer.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @customer.phone %></dd>
</dl>
<%= image_tag @customer.image_url(:thumb).to_s %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>


